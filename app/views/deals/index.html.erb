<h1>Index page for deals</h1>

<div class="wrapper">
  <% @deals.each do |deal| %>
  <div class="deal-tile">
    <i class="fa fa-trash" id="delete-<%=deal.id%>"></i>
    <i class="fa fa-pencil-square-o" id="edit-<%=deal.id%>"></i><br>
    <img src="<%= deal.deal_image %>">
    <h3><%= deal.name %></h3>
        <%= deal.short_description %>
  </div>
  <% end %>

  <div class="deal-tile empty">
    <i class="fa fa-plus"></i>
  </div>
</div>
