<%= render partial: "partials/header.html.erb" %>
<div class="container">
  <div class="edit-form span_6_of_12">
  <h2 class="subtitle">Update Profile</h2>
    <%= form_for @customer do |f| %>

        <div class="field">
          <li class="span_6_of_12">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, :class => "span_12_of_12" %>
          </li>

          <li class="span_6_of_12 right">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, autofocus: true, :class => "span_12_of_12"  %>
          </li>
        </div>

        <div class="field">
          <li class="span_6_of_12">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, :class => "span_12_of_12"  %>
          </li>

          <li class="span_6_of_12 right">
            <%= f.label :phone_number %><br />
            <%= f.telephone_field :phone_number, autofocus: true, :class => "span_12_of_12"  %>
          </li>
        </div>

      <div class="actions">
        <%= link_to "Back", :back, :class => "right" %>
        <%= f.submit "Update" %>
      </div>
    <% end %>
  </div>
</div>
<%= render partial: "partials/footer.html.erb" %>