<div class="home business">
  <div class="overlay span_12_of_12">

    <div class="header-container span_7_of_12">
      <h1><img class="dw-logo" src="<%=image_path('white.png')%>"/></h1>

      <% if business_signed_in? %>

      <% else %>
        <div class="home-buttons span_3_of_12">
          <button class="business-signup-link span_10_of_12">
            <a href="/businesses/sign_up">Sign up</a>
          </button>
        <button class="business-login-link span_10_of_12">
          <a href="/businesses/sign_in">Login</a>
        </button>
      </div>
      <% end %>
    </div>
  </div>
  <header class="home-element span_12 business">
  </header>

