<%= render partial: "partials/header_business.html.erb" %>
<div class="container">
  <div class="edit-form span_6_of_12">
  <h2 class="subtitle">Update Profile</h2>
    <%= form_for @business do |f| %>

        <div class="field">
          <li class="span_6_of_12">
            <%= f.label :business_name %><br />
            <%= f.text_field :name, autofocus: true, :class => "span_12_of_12"  %>
          </li>

          <li class="span_6_of_12">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, :class => "span_12_of_12"  %>
          </li>
        </div>

        <div class="field">
          <li class="span_6_of_12">
            <%= f.label :phone_number %><br />
            <%= f.telephone_field :phone_number, autofocus: true, :class => "span_12_of_12"  %>
          </li>

          <li class="span_6_of_12">
            <%= f.label :logo %><br />
            <%= f.text_field :logo, autofocus: true, :class => "span_12_of_12"  %>
          </li>
        </div>

        <div class="field">
          <li class="span_6_of_12">
            <%= f.label :address %><br />
            <%= f.text_field :address, autofocus: true, :class => "span_12_of_12"  %>
          </li>
          
          <li class="span_6_of_12">
            <%= f.label :short_description %><br />
            <%= f.text_field :short_description, autofocus: true, :class => "span_12_of_12"  %>
          </li>
        </div>

        <div class="actions">
          <%= link_to "Back", :back, :class => "right" %>
          <%= f.submit "Update" %>
      </div>
    <% end %>
  </div>
</div>
<%= render partial: "partials/business_footer.html.erb" %>
